    &ltwt:radio field="Entity.IsValid" yes-text="true" no-text="false" /&gt
    &ltwt:radio field="SelectedSchool" label-text="School" items="AllSchools" /&gt
    &ltwt:row align="AlignEnum.Right"&gt
        &ltwt:submitbutton disabled="true" /&gt
        &ltwt:closebutton disabled="true" /&gt
    &lt/wt:row&gt
&lt/wt:form&gt

                    </wt:code>
                </wt:tabcontent>
            </wt:tabcontents>
        </wt:tab>

