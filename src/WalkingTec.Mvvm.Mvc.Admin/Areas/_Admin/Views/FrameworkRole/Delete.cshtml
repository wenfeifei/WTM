@model WalkingTec.Mvvm.Mvc.Admin.ViewModels.FrameworkRoleVMs.FrameworkRoleVM
@using Microsoft.Extensions.Localization;
@inject IStringLocalizer<WalkingTec.Mvvm.Core.Program> Localizer;

  <wt:form vm="@Model">
    <wt:quote>@Localizer["DeleteConfirm"]</wt:quote>
    <wt:textbox field="Entity.RoleCode" />
    <wt:textbox field="Entity.RoleName" />
    <wt:textarea field="Entity.RoleRemark" disabled="true" />
    <wt:hidden field="Entity.ID" />
    <wt:row align=" AlignEnum.Right">
      <wt:submitbutton theme=" ButtonThemeEnum.Warm" text="删除" />
      <wt:closebutton />
    </wt:row>
  </wt:form>
